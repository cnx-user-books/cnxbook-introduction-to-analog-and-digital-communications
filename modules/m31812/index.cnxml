                          <m:mi>f</m:mi>
                          <m:mo>-</m:mo>
                          <m:mfrac>
                            <m:mi>k</m:mi>
                            <m:mi>T</m:mi>
                          </m:mfrac>
                        </m:mfenced>
                      </m:mrow>
                      <m:mo>︸</m:mo>
                    </m:munder>
                    <m:mstyle scriptlevel="0" displaystyle="true">
                      <m:mrow>
                        <m:mfrac>
                          <m:mn>1</m:mn>
                          <m:mi>T</m:mi>
                        </m:mfrac>
                        <m:munderover>
<m:mrow>
                          <m:mo>∑</m:mo>
</m:mrow>        
                  <m:mrow>
                            <m:mi>k</m:mi>
                            <m:mo>=</m:mo>
                            <m:mo>-</m:mo>
                            <m:mi>∞</m:mi>
                          </m:mrow>
                          <m:mi>∞</m:mi>
                        </m:munderover>
                        <m:mi>P</m:mi>
                        <m:mfenced separators="" open="(" close=")">
                          <m:mi>f</m:mi>
                          <m:mo>-</m:mo>
                          <m:mfrac>
                            <m:mi>k</m:mi>
                            <m:mi>T</m:mi>
                          </m:mfrac>
                        </m:mfenced>
                      </m:mrow>
                    </m:mstyle>
                  </m:munder>
                </m:mtd>
                <m:mtd>
                  <m:mover>
                    <m:mo>↔ </m:mo>
                    <m:mi mathvariant="script">F</m:mi>
                  </m:mover>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mrow>
                    <m:munder>
                      <m:munder accentunder="true">
                        <m:mrow>
                          <m:mi>p</m:mi>
