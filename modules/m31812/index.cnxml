                        <m:mo form="prefix">cos</m:mo>
                        <m:mo>(</m:mo>
                        <m:mi>π</m:mi>
                        <m:mi>α</m:mi>
                        <m:mi>t</m:mi>
                        <m:mo>/</m:mo>
                        <m:mi>T</m:mi>
                        <m:mo>)</m:mo>
                      </m:mrow>
                      <m:mrow>
                        <m:mn>1</m:mn>
                        <m:mo>-</m:mo>
                        <m:msup>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mn>2</m:mn>
                            <m:mi>α</m:mi>
                            <m:mi>t</m:mi>
                            <m:mo>/</m:mo>
                            <m:mi>T</m:mi>
                            <m:mo>)</m:mo>
