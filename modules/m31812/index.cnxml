                        <m:mo>∑</m:mo>
                        <m:mi>n</m:mi>
                      </m:msub>
                      <m:mi>a</m:mi>
                      <m:mrow>
                        <m:mo>[</m:mo>
                        <m:mi>n</m:mi>
                        <m:mo>]</m:mo>
                      </m:mrow>
