                          <m:munderover>
<m:mrow>
                            <m:mo>∑</m:mo>
</m:mrow>        
                    <m:mrow>
                              <m:mi>m</m:mi>
                              <m:mo>=</m:mo>
                              <m:mo>-</m:mo>
                              <m:mi>∞</m:mi>
