                        <m:mo>*</m:mo>
                        <m:mfrac>
                          <m:mn>1</m:mn>
                          <m:mi>T</m:mi>
                        </m:mfrac>
                        <m:munderover>
<m:mrow>
                          <m:mo>∑</m:mo>
</m:mrow>        
                  <m:mrow>
                            <m:mi>k</m:mi>
                            <m:mo>=</m:mo>
                            <m:mo>-</m:mo>
                            <m:mi>∞</m:mi>
                          </m:mrow>
