                        <m:mi>π</m:mi>
                        <m:mi>x</m:mi>
                        <m:mo>)</m:mo>
                      </m:mrow>
                      <m:mrow>
                        <m:mi>π</m:mi>
                        <m:mi>x</m:mi>
                      </m:mrow>
                    </m:mfrac>
                  </m:mrow>
                </m:mtd>
              </m:mtr>
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:msub>
                      <m:mi>P</m:mi>
                      <m:mtext>RC</m:mtext>
                    </m:msub>
                    <m:mrow>
                      <m:mo>(</m:mo>
                      <m:mi>f</m:mi>
                      <m:mo>)</m:mo>
                    </m:mrow>
                  </m:mrow>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mrow>
                    <m:mfenced separators="" open="{" close="">
                      <m:mtable>
                        <m:mtr>
                          <m:mtd columnalign="left">
                            <m:mi>T</m:mi>
                          </m:mtd>
                          <m:mtd columnalign="left">
                            <m:mrow>
                              <m:mrow>
                                <m:mo>|</m:mo>
                                <m:mi>f</m:mi>
                                <m:mo>|</m:mo>
                              </m:mrow>
                              <m:mo>≤</m:mo>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mo>(</m:mo>
                                  <m:mn>1</m:mn>
                                  <m:mo>-</m:mo>
                                  <m:mi>α</m:mi>
                                  <m:mo>)</m:mo>
                                </m:mrow>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>T</m:mi>
                                </m:mrow>
                              </m:mfrac>
                            </m:mrow>
                          </m:mtd>
                        </m:mtr>
                        <m:mtr>
                          <m:mtd columnalign="left">
                            <m:mrow>
                              <m:mi>T</m:mi>
                              <m:msup>
                                <m:mo form="prefix">cos</m:mo>
                                <m:mn>2</m:mn>
                              </m:msup>
                              <m:mfenced separators="" open="(" close=")">
                                <m:mfrac>
                                  <m:mrow>
                                    <m:mi>π</m:mi>
                                    <m:mi>T</m:mi>
                                  </m:mrow>
                                  <m:mrow>
                                    <m:mn>2</m:mn>
                                    <m:mi>α</m:mi>
                                  </m:mrow>
                                </m:mfrac>
                                <m:mfenced separators="" open="(" close=")">
                                  <m:mrow>
                                    <m:mo>|</m:mo>
                                    <m:mi>f</m:mi>
                                    <m:mo>|</m:mo>
                                  </m:mrow>
                                  <m:mo>-</m:mo>
                                  <m:mfrac>
                                    <m:mrow>
                                      <m:mn>1</m:mn>
                                      <m:mo>-</m:mo>
                                      <m:mi>α</m:mi>
                                    </m:mrow>
                                    <m:mrow>
                                      <m:mn>2</m:mn>
                                      <m:mi>T</m:mi>
                                    </m:mrow>
                                  </m:mfrac>
                                </m:mfenced>
                              </m:mfenced>
                            </m:mrow>
                          </m:mtd>
                          <m:mtd columnalign="left">
                            <m:mrow>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mo>(</m:mo>
                                  <m:mn>1</m:mn>
                                  <m:mo>-</m:mo>
                                  <m:mi>α</m:mi>
                                  <m:mo>)</m:mo>
                                </m:mrow>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>T</m:mi>
                                </m:mrow>
                              </m:mfrac>
                              <m:mo>≤</m:mo>
                              <m:mrow>
                                <m:mo>|</m:mo>
                                <m:mi>f</m:mi>
                                <m:mo>|</m:mo>
                              </m:mrow>
                              <m:mo>≤</m:mo>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mo>(</m:mo>
                                  <m:mn>1</m:mn>
                                  <m:mo>+</m:mo>
                                  <m:mi>α</m:mi>
                                  <m:mo>)</m:mo>
                                </m:mrow>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>T</m:mi>
                                </m:mrow>
                              </m:mfrac>
                            </m:mrow>
                          </m:mtd>
                        </m:mtr>
                        <m:mtr>
                          <m:mtd columnalign="left">
                            <m:mn>0</m:mn>
                          </m:mtd>
                          <m:mtd columnalign="left">
                            <m:mrow>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mo>(</m:mo>
                                  <m:mn>1</m:mn>
                                  <m:mo>+</m:mo>
                                  <m:mi>α</m:mi>
                                  <m:mo>)</m:mo>
                                </m:mrow>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mi>T</m:mi>
                                </m:mrow>
                              </m:mfrac>
                              <m:mo>≤</m:mo>
                              <m:mrow>
                                <m:mo>|</m:mo>
