            <m:mtable displaystyle="true">
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mstyle scriptlevel="0" displaystyle="false">
                    <m:msup>
                      <m:mfenced separators="" open="|" close="|">
                        <m:msubsup>
                          <m:mo>∫</m:mo>
                          <m:mrow>
                            <m:mo>-</m:mo>
                            <m:mi>∞</m:mi>
                          </m:mrow>
                          <m:mi>∞</m:mi>
                        </m:msubsup>
                        <m:mi>b</m:mi>
                        <m:mrow>
                          <m:mo>(</m:mo>
                          <m:mi>τ</m:mi>
                          <m:mo>)</m:mo>
                        </m:mrow>
                        <m:mi>c</m:mi>
