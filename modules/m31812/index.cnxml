                            <m:mi>T</m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
                          <m:mi>δ</m:mi>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mi>t</m:mi>
                            <m:mo>-</m:mo>
                            <m:mi>m</m:mi>
                            <m:mi>T</m:mi>
                            <m:mo>)</m:mo>
                          </m:mrow>
